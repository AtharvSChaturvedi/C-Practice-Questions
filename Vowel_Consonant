#include<stdio.h>
int main() {
	char ch;
	printf("Enter a character = ");
	scanf("%c", &ch);
	if ((ch>='a'&& ch<='z') || (ch>='A' && ch<='Z')) {
		if(ch =='a' || ch=='A' || ch=='e' || ch=='E' || ch=='i' || ch=='I' || ch=='o' || ch=='O' || ch=='u' || ch=='U') {
			printf("Character is a vowel\n");
		}
		else {
			printf("Character is a consonant\n");
		}
	}
	else {
		printf("INAVLID CHARACTER\n");
	}
}
