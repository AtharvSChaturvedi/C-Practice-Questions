#include<stdio.h>
int main() {
	int num, num1=0, rev=0, r;
	printf("Enter a number = ");
	scanf("%d", &num);
	num1 = num;
	while(num1!=0) {
		r=num1%10;
		rev=(rev*10)+r;
		num1=num1/10;
	}
	if (rev=num) {
		printf("Reverse of %d = %d and is a palindrome\n", num, rev);
	}
	else {
		printf("Reverse of %d = %d\n", num, rev);
	}	
}
